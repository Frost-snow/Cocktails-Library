<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_lv_Library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@android:drawable/ic_menu_report_image" />

    <TextView
        android:id="@+id/tvName_lv_Library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_lv_Library"
        android:layout_toRightOf="@+id/image_lv_Library"
        android:text="Name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvRecipe_lv_Library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvName_lv_Library"
        android:layout_below="@+id/tvName_lv_Library"
        android:text="Recipe" />

</RelativeLayout>